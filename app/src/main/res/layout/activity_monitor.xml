<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MonitorActivity">


    <Button
        android:id="@+id/btrecord"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="105dp"

        android:text="View record" />
<TextView
    android:id="@+id/heartrate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="heartRATE"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="50dp"
    android:textSize="20sp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/temp38"
        android:layout_toRightOf="@id/heartrate"/>
     <ImageView
        android:id="@+id/temp"
        android:layout_width="151.7dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/temp37"
        android:layout_toRightOf="@id/heartrate"/>
    <ImageView
        android:id="@+id/mask"
        android:layout_width="151.7dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/temp36"
        android:layout_toRightOf="@id/heartrate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/temp"
        android:layout_marginEnd="26dp"
        android:text="shit"
        android:visibility="invisible"
        android:id="@+id/shit"/>
</RelativeLayout>